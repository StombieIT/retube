$common-br = 15px;

.range {
    cursor: pointer;
    padding: 15px 0;
}

.line {
    position: relative;
    height: 5px;
}

.barWrapper {
    background-color: rgba(255, 255, 255, 0.55);
    position: absolute;
    inset: 0;
    border-radius: $common-br;
    overflow: hidden;

    &::before,
    &::after {
        border-radius: $common-br;
        content: '';
        display: block;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: -100%;
    }

    &::before {
        z-index: 1;
        background-color: #ffffff;
        transform: translateX(var(--fact-progress, 0));
    }

    &::after {
        background-color: rgba(255, 255, 255, 0.6);
        transform: translateX(var(--desirable-progress, 0));
    }
}

.thumb {
    position: absolute;
    z-index: 2;
    top: 50%;
    left: var(--fact-progress, 0);
    width: 20px;
    border-radius: 50%;
    border: 3px solid #ffffff;
    height: @width;
    background-color: #d8d8d8;
    transition: transform .15s;
    transform-origin: 0 0;
    transform: scale(0) translate(-50%, -50%);

    .range:hover & {
        transform: scale(1) translate(-50%, -50%);
    }
}
