.form {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.field {
    margin-bottom: 20px;
    max-width: 500px;
}

.flows {
    flex-basis: 400px;
    width: 100%;
    flex-grow: 1;
    flex-wrap: wrap;
    display: flex;
    justify-content: center;
    column-gap: 20px;
    row-gap: @column-gap;

    :global(.candidate) {
        flex-basis: 350px;
        flex-grow: 1;
    }
}

.buttons {
    display: flex;
    gap: 20px;
}

.logo {
    margin-bottom: 50px;
}

.motivationText {
    font-size: 22px;
    text-align: center;
    margin-bottom: 80px;
}
